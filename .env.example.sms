# SMS Configuration
# Available drivers: log, twilio, local_api
SMS_DRIVER=log

# For Local SMS API
SMS_API_URL=https://your-sms-api.com/send
SMS_API_KEY=your-api-key-here
SMS_SENDER_ID=RAILWAY

# For Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Cache Settings (for OTP caching)
CACHE_DRIVER=file
CACHE_PREFIX=railway_

# Session Settings (for remember me functionality)
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
